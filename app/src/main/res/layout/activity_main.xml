<com.linkin.floatindicator.FocusFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/move_100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="move 100" />

        <Button
            android:id="@+id/move_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="move 200" />
    </LinearLayout>


</com.linkin.floatindicator.FocusFrameLayout>
